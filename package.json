{
    "name": "workspace-root",
    "description": "Workspace root.",
    "version": "0.0.0",
    "author": "Workleap",
    "private": true,
    "type": "module",
    "license": "Apache-2.0",
    "scripts": {
        "dev-host": "turbo run dev --filter=@apps/host",
        "dev-host-msw": "cross-env USE_MSW=true pnpm dev-host",
        "dev-home-management": "cross-env MODULES=home/management pnpm dev-host",
        "dev-home-management-msw": "cross-env USE_MSW=true MODULES=home/management pnpm dev-host",
        "dev-home-migration": "cross-env MODULES=home/migration pnpm dev-host",
        "dev-home-migration-msw": "cross-env USE_MSW=true MODULES=home/migration pnpm dev-host",
        "dev-home-storybook": "turbo run dev --filter=@apps/home-storybook",
        "dev-packages-storybook": "turbo run dev --filter=@apps/packages-storybook",
        "dev-storybook": "turbo run dev --filter=@apps/storybook",
        "build-host": "turbo run build --filter=@apps/host",
        "build-storybook": "turbo run build-storybook --filter=@apps/storybook",
        "serve-host": "turbo run serve-build --filter=@apps/host",
        "serve-storybook": "turbo run serve-storybook --filter=@apps/storybook",
        "lint": "turbo run lint --continue",
        "eslint": "eslint . --max-warnings=0 --cache --cache-location node_modules/.cache/eslint",
        "typecheck": "tsc",
        "syncpack": "syncpack lint",
        "clean": "pnpm -r --parallel --include-workspace-root exec pnpm dlx rimraf dist storybook-static .turbo .playwright .rslib node_modules/.cache",
        "reset": "pnpm run --sequential \"/^reset:.*/\"",
        "reset:clean": "pnpm clean",
        "reset:delete-node-modules": "pnpm -r --parallel --include-workspace-root exec pnpm dlx rimraf node_modules pnpm-lock.yaml",
        "list-outdated-deps": "pnpm outdated -r --format list",
        "update-outdated-deps": "pnpm run --sequential \"/^update-outdated-deps:.*/\"",
        "update-outdated-deps:update-versions": "pnpm update -r --latest",
        "update-outdated-deps:update-peers": "syncpack fix-mismatches"
    },
    "devDependencies": {
        "@eslint/js": "9.39.2",
        "@types/node": "25.0.3",
        "@typescript-eslint/parser": "8.50.0",
        "@workleap/eslint-configs": "1.1.8",
        "@workleap/typescript-configs": "3.0.7",
        "cross-env": "10.1.0",
        "eslint": "9.39.2",
        "netlify-cli": "23.13.0",
        "syncpack": "13.0.4",
        "tsx": "4.21.0",
        "turbo": "2.7.0",
        "typescript": "5.9.3",
        "typescript-eslint": "8.50.0"
    },
    "engines": {
        "node": ">=24.0.0",
        "pnpm": ">=10"
    },
    "packageManager": "pnpm@10.20.0"
}
