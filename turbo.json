{
    "$schema": "https://turbo.build/schema.json",
    "globalEnv": ["USE_MSW", "MODULES"],
    "ui": "tui",
    "tasks": {
        "dev": {
            "dependsOn": ["^dev"],
            "cache": false,
            "persistent": true
        },
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**"]
        },
        "build-storybook": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**", "storybook-static/**"],
            "cache": false
        },
        "serve-build": {
            "dependsOn": ["build"],
            "cache": false,
            "persistent": true
        },
        "lint": {
            "dependsOn": ["eslint", "//#eslint", "stylelint", "typecheck", "//#typecheck", "//#syncpack"]
        },
        "//#eslint": {
            "outputs": ["node_modules/.cache/eslint"]
        },
        "eslint": {
            "outputs": ["node_modules/.cache/eslint"]
        },
        "stylelint": {
            "outputs": ["node_modules/.cache/stylelint"]
        },
        "//#typecheck": {
            "outputs": ["node_modules/.cache/tsbuildinfo.json"]
        },
        "typecheck": {
            "outputs": ["node_modules/.cache/tsbuildinfo.json"]
        },
        "//#syncpack": {},
        "test": {
            "outputs": ["node_modules/.cache/vitest/**"]
        }
    }
}
