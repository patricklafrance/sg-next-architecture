{
    "name": "@apps/host",
    "description": "ShareGate Home application",
    "private": true,
    "author": "Workleap",
    "version": "0.0.0",
    "license": "Apache-2.0",
    "type": "module",
    "scripts": {
        "postinstall": "pnpm msw init",
        "dev": "rsbuild dev --config rsbuild.dev.ts",
        "build": "pnpm run --sequential \"/^build:.*/\"",
        "build:app": "rsbuild build --config rsbuild.build.ts",
        "build:edge-functions": "rslib build --config rslib.edge-functions.ts",
        "serve-build": "pnpm http-server dist/app -p 8081 -P http://localhost:8081? -c-1 --cors",
        "eslint": "eslint . --max-warnings=0 --cache --cache-location node_modules/.cache/eslint",
        "stylelint": "stylelint \"**/*.css\" --allow-empty-input --cache --cache-location node_modules/.cache/stylelint --max-warnings=0",
        "typecheck": "tsc"
    },
    "dependencies": {
        "@home-modules/management": "workspace:*",
        "@home-modules/migration": "workspace:*",
        "@hopper-ui/components": "1.16.3",
        "@hopper-ui/icons": "2.10.4",
        "@hopper-ui/styled-system": "2.5.14",
        "@opentelemetry/api": "1.9.0",
        "@packages/core": "workspace:*",
        "@packages/core-module": "workspace:*",
        "@squide/firefly": "16.1.4",
        "@squide/firefly-rsbuild-storybook": "1.0.4",
        "@tanstack/react-query": "5.90.12",
        "@workleap/logging": "1.3.3",
        "@workleap/logrocket": "2.1.7",
        "@workleap/telemetry": "2.1.10",
        "launchdarkly-js-client-sdk": "3.9.0",
        "logrocket": "10.1.1",
        "react": "19.2.3",
        "react-aria": "3.44.0",
        "react-aria-components": "1.13.0",
        "react-dom": "19.2.3",
        "react-router": "7.10.1"
    },
    "devDependencies": {
        "@eslint/js": "9.39.2",
        "@rsbuild/core": "1.6.14",
        "@rslib/core": "0.18.4",
        "@rspack/core": "1.6.7",
        "@types/react": "19.2.7",
        "@types/react-dom": "19.2.3",
        "@typescript-eslint/parser": "8.49.0",
        "@workleap/browserslist-config": "2.1.4",
        "@workleap/eslint-configs": "1.1.7",
        "@workleap/netlify-skew-protection": "1.0.5",
        "@workleap/rsbuild-configs": "3.1.5",
        "@workleap/stylelint-configs": "2.1.4",
        "@workleap/typescript-configs": "3.0.7",
        "eslint": "9.39.2",
        "http-server": "14.1.1",
        "msw": "2.12.4",
        "prettier": "3.7.4",
        "storybook": "10.1.8",
        "storybook-react-rsbuild": "3.1.0",
        "stylelint": "16.26.1",
        "typescript": "5.9.3",
        "typescript-eslint": "8.49.0"
    },
    "msw": {
        "workerDirectory": [
            "public"
        ]
    }
}
