{
    "name": "@apps/home-storybook",
    "description": "Storybook application for the SG Home application.",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "postinstall": "pnpm exec msw init",
        "dev": "storybook dev -p 6006 --disable-telemetry",
        "build-storybook": "storybook build --disable-telemetry",
        "serve-storybook": "pnpm http-server storybook-static -p 8080 -P http://localhost:8080? -c-1",
        "eslint": "eslint . --max-warnings=0 --cache --cache-location node_modules/.cache/eslint",
        "typecheck": "tsc",
        "doctor": "storybook doctor"
    },
    "dependencies": {
        "@hopper-ui/components": "1.16.4",
        "@hopper-ui/styled-system": "2.5.14",
        "@storybook/addon-a11y": "10.1.10",
        "msw": "2.12.4",
        "msw-storybook-addon": "2.0.6",
        "react": "19.2.3",
        "react-aria": "3.45.0",
        "react-aria-components": "1.14.0",
        "react-dom": "19.2.3",
        "react-router": "7.11.0",
        "storybook": "10.1.10",
        "storybook-react-rsbuild": "3.2.0"
    },
    "devDependencies": {
        "@eslint/js": "9.39.2",
        "@rsbuild/core": "1.6.15",
        "@types/react": "19.2.7",
        "@types/react-dom": "19.2.3",
        "@typescript-eslint/parser": "8.50.0",
        "@workleap/eslint-configs": "1.1.8",
        "@workleap/rsbuild-configs": "3.1.5",
        "@workleap/typescript-configs": "3.0.7",
        "eslint": "9.39.2",
        "http-server": "14.1.1",
        "typescript": "5.9.3",
        "typescript-eslint": "8.50.0"
    },
    "msw": {
        "workerDirectory": [
            ".storybook/public"
        ]
    }
}
